<% if @card.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <strong><%= pluralize(@card.errors.count, t('error')) %> <%= t('card_errortext') %></strong>
  <ul>
  <% @card.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.text_area :question, :class => "form-control floating-label", :placeholder => t('question').capitalize, :required => "true", :rows => "5" %>
</div>

<div class="form-group">
  <%= f.text_area :answer, :class => "form-control floating-label", :placeholder => t('answer').capitalize, :required => "true", :rows => "5" %>
</div>

<div class="form-group margin-top-md">
  <%= f.select(:category_id, {}, {}, { :class => "select form-control floating-label", :placeholder => t('category').capitalize }) do %>
    <%= options_for_select(Category.all.collect {|cat| [ cat.title, cat.id ] }, @card.category_id) %>
  <% end %>
</div>

<% if params[:action] != 'new' %>
<%= f.submit t('action_update'), :class => "btn" %>
<% else %>
<%= f.submit t('action_add'), :class => "btn" %>
<% end %>
