<% if @card.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <strong><%= pluralize(@card.errors.count, t('error')) %> <%= t('card_errortext') %></strong>
  <ul>
  <% @card.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.text_area :question, :class => "form-control floating-label", :placeholder => :question %>
</div>

<div class="form-group">
  <%= f.text_area :answer, :class => "form-control floating-label", :placeholder => :answer %>
</div>

<div class="form-group margin-top-md">
  <%= f.select(:category_id, {}, {}, { :class => "select form-control floating-label", :placeholder => :Category }) do %>
    <% Category.all.each do |category| %>
      <%= content_tag(:option, category.title, value: category.id) %>
    <% end %>
  <% end %>
</div>

<div class="form-group">
  <% if params[:action] != 'new' %>
  <%= f.submit t('action_update'), :class => "btn btn-success btn-raised" %>
  <% else %>
  <%= f.submit t('action_add'), :class => "btn btn-success btn-raised" %>
  <% end %>
</div>
