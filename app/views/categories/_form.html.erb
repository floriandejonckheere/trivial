<%= form_for @category do |f| %>
  <% if @category.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <strong><%= pluralize(@category.errors.count, t('error')) %> <%= t('category_errortext') %></strong>
    <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, :class => "form-control floating-label", :placeholder => :title %>
  </div>

  <div class="form-group">
    <small><%= :Color %></small>
    <div>
      <% Category.colors.each do |c| %>
        <div class="color-box withripple well-material-<%= c %>">
          <%= f.radio_button :color, c %>
          <div class="radio-label radio-label-inactive mdi-action-done"></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <% if params[:action] != 'new' %>
    <%= f.submit t('action_update'), :class => "btn btn-success btn-raised" %>
    <% else %>
    <%= f.submit t('action_add'), :class => "btn btn-success btn-raised" %>
    <% end %>
  </div>
<% end %>
